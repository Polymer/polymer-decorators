{
  "compilerOptions": {
    "module": "umd",
    "target": "es6",
    "lib": [
      "es2016",
      "dom"
    ],
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "allowJs": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts"
  ]
}
